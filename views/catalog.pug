extends layout

block stylesheet 
    link(rel='stylesheet', href='/stylesheets/catalog.css')

block content
    div.title-options 
        if cars.length
            h2.title= title
        else
            h2.title There are no cars in category #{title}
    div(class="container")
        
        each car in cars
            div(class="car-card")  
                a(href= car.url) 
                    img(class="car-image" src=car.image, alt=`image of ${car.name}`)
                div(class="car-info")
                    a(href= car.url) 
                        p(class="car-name") #[strong #{car.name}] 
                        
                    div(class="car-brand") #[strong Manufacturer: ]
                        a(href=car.brand.url) #{car.brand.name}
                    div(class="car-category") #[strong Category: ]
                        a(href=car.category.url) #{car.category.name}
                    div(class="car-release") #[strong Release year:] #{car.releaseYear_formatted}
                    div(class="car-description") #[strong Description:] #{car.description}
                    div(class="buying-info")
                        div(class="car-price") #[strong Price:] #{car.price}$
                        div(class="car-stock") #[strong Stock:] #{car.inStock}
        div(class="create-car")
            if category
                a(href="/car/create/" + category._id)
                    p #[strong Create new car]
                    img(class="new-icon" src="https://cdn3.iconfinder.com/data/icons/harmonicons-06/64/plus-circle-512.png", alt="create new car icon") 
            if manufacturer
                a(href="/car/create/" + manufacturer._id)
                    p #[strong Create new car]
                    img(class="new-icon" src="https://cdn3.iconfinder.com/data/icons/harmonicons-06/64/plus-circle-512.png", alt="create new car icon") 